<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.studente.calcolatrice.MainActivity"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/calc"
        android:layout_width="0dp"
        android:layout_height="101dp"
        android:layout_marginBottom="15dp"
        android:fontFamily="monospace"
        android:textAlignment="textEnd"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:stretchColumns="*"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="139dp">

            <Button
                android:id="@+id/bCanc"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_height="70dp"
                android:fontFamily="monospace"
                android:text="C"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="30sp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="211dp" />

            <LinearLayout
                android:id="@+id/Parentesi"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/bParentesiAp"

                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="45dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="monospace"
                    android:text="("
                    android:textColor="@android:color/holo_blue_dark"
                    android:textSize="30sp"
                    tools:layout_editor_absoluteX="70dp"
                    tools:layout_editor_absoluteY="211dp" />

                <Button
                    android:id="@+id/bParentesiCh"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="44dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="monospace"
                    android:text=")"
                    android:textColor="@android:color/holo_blue_dark"
                    android:textSize="30sp" />

            </LinearLayout>

            <Button
                android:id="@+id/bPercentuale"
                style="@style/Widget.AppCompat.Button.Borderless"

                android:layout_height="match_parent"
                android:fontFamily="monospace"
                android:text="%"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="30sp"
                tools:layout_editor_absoluteX="140dp"
                tools:layout_editor_absoluteY="211dp" />

            <Button
                android:id="@+id/bDivisione"
                style="@style/Widget.AppCompat.Button.Borderless"

                android:layout_height="match_parent"
                android:fontFamily="monospace"
                android:text="/"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="30sp"
                tools:layout_editor_absoluteX="210dp"
                tools:layout_editor_absoluteY="211dp" />

        </TableRow>

        <TableRow
            android:layout_width="352dp"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/b7"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_height="70dp"
                android:fontFamily="monospace"
                android:text="7"
                android:textSize="30sp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="271dp" />

            <Button
                android:id="@+id/b8"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_height="match_parent"
                android:fontFamily="monospace"
                android:text="8"
                android:textSize="30sp"
                tools:layout_editor_absoluteX="70dp"
                tools:layout_editor_absoluteY="271dp" />

            <Button
                android:id="@+id/b9"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_height="match_parent"
                android:fontFamily="monospace"
                android:text="9"
                android:textSize="30sp"
                tools:layout_editor_absoluteX="140dp"
                tools:layout_editor_absoluteY="271dp" />

            <Button
                android:id="@+id/bMoltiplicazione"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_height="match_parent"
                android:fontFamily="monospace"
                android:text="*"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="30sp"
                tools:layout_editor_absoluteX="210dp"
                tools:layout_editor_absoluteY="1dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/b4"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_height="70dp"
                android:fontFamily="monospace"
                android:text="4"
                android:textSize="30sp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="330dp" />

            <Button
                android:id="@+id/b5"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_height="match_parent"
                android:fontFamily="monospace"
                android:text="5"
                android:textSize="30sp"
                tools:layout_editor_absoluteX="70dp"
                tools:layout_editor_absoluteY="330dp" />

            <Button
                android:id="@+id/b6"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_height="match_parent"
                android:fontFamily="monospace"
                android:text="6"
                android:textSize="30sp"
                tools:layout_editor_absoluteX="140dp"
                tools:layout_editor_absoluteY="331dp" />

            <Button
                android:id="@+id/bSottrazione"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_height="match_parent"
                android:fontFamily="monospace"
                android:text="-"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="30sp"
                tools:layout_editor_absoluteX="210dp"
                tools:layout_editor_absoluteY="331dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/b1"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_height="70dp"
                android:fontFamily="monospace"
                android:text="1"
                android:textSize="30sp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="390dp" />

            <Button
                android:id="@+id/b2"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_height="match_parent"
                android:fontFamily="monospace"
                android:text="2"
                android:textSize="30sp"
                tools:layout_editor_absoluteX="70dp"
                tools:layout_editor_absoluteY="390dp" />

            <Button
                android:id="@+id/b3"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_height="match_parent"
                android:fontFamily="monospace"
                android:text="3"
                android:textSize="30sp"
                tools:layout_editor_absoluteX="140dp"
                tools:layout_editor_absoluteY="390dp" />

            <Button
                android:id="@+id/bAddizione"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_height="match_parent"
                android:fontFamily="monospace"
                android:text="+"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="30sp"
                tools:layout_editor_absoluteX="210dp"
                tools:layout_editor_absoluteY="390dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bMisure"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_height="70dp"
                android:fontFamily="monospace"
                android:text="MIS"
                android:textSize="30sp" />

            <Button
                android:id="@+id/b0"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_height="match_parent"
                android:fontFamily="monospace"
                android:text="0"
                android:textSize="30sp"
                tools:layout_editor_absoluteX="70dp"
                tools:layout_editor_absoluteY="450dp" />

            <Button
                android:id="@+id/bVirgola"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_height="match_parent"
                android:fontFamily="monospace"
                android:text="."
                android:textSize="30sp"
                tools:layout_editor_absoluteX="140dp"
                tools:layout_editor_absoluteY="450dp" />

            <Button
                android:id="@+id/bUguale"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_height="70dp"
                android:background="@android:color/holo_blue_light"
                android:fontFamily="serif-monospace"
                android:text="="
                android:textColor="@android:color/background_light"
                android:textSize="30sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="210dp"
                tools:layout_editor_absoluteY="450dp" />

        </TableRow>

    </TableLayout>


</android.support.constraint.ConstraintLayout>
